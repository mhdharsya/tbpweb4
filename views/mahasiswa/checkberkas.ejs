<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Berkas - SISemhas</title>
    <link rel="stylesheet" href="/mahasiswa/css/checkberkas.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <img class="logo" src="/mahasiswa/asset/image/logo.png" alt="Logo Universitas Andalas">
        <div class="header-title">SISemhas - Universitas Andalas</div>
    </header>

            <!-- Navigation Tabs -->
        <nav class="nav-tabs">
          <div class="nav-left">
            <a href="/dashboardMhs" class="nav-tab">Dashboard</a>
            <a href="/daftar/" class="nav-tab">Pendaftaran</a>
            <a href="/riwayat/" class="nav-tab">Riwayat Semhas</a>
          </div>
        </nav>

        <div class="breadcrumb">
            <span>Check Berkas</span>
        </div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title">Check Berkas</h1>
                <p class="page-subtitle">File Harus Berupa PDF - Maximal 20MB</p>
            </div>

            <div class="berkas-grid">
                <!-- KRS Section -->
                <div class="berkas-section">
                    <h2 class="section-title">KRS</h2>
                    <div class="button-group">
                        <button class="btn btn-view" data-type="krs" data-action="view">
                            Melihat berkas
                        </button>
                        <button class="btn btn-update" data-type="krs" data-action="update">
                            memperbarui
                        </button>
                    </div>
                </div>

                <!-- PPT Penelitian Section -->
                <div class="berkas-section">
                    <h2 class="section-title">PPT_Penelitian</h2>
                    <div class="button-group">
                        <button class="btn btn-view" data-type="ppt" data-action="view">
                            Melihat berkas
                        </button>
                        <button class="btn btn-update" data-type="ppt" data-action="update">
                            memperbarui
                        </button>
                    </div>
                </div>

                <!-- Lampiran Pengesahan Section -->
                <div class="berkas-section">
                    <h2 class="section-title">Lampiran_Pengesahan</h2>
                    <div class="button-group">
                        <button class="btn btn-update" data-type="lampiran" data-action="update">
                            memperbarui
                        </button>
                        <button class="btn btn-view" data-type="lampiran" data-action="view">
                            Melihat berkas
                        </button>
                    </div>
                </div>

                <!-- Laporan Penelitian Section -->
                <div class="berkas-section">
                    <h2 class="section-title">Laporan_Penelitian</h2>
                    <div class="button-group">
                        <button class="btn btn-view" data-type="laporan" data-action="view">
                            Melihat berkas
                        </button>
                        <button class="btn btn-update" data-type="laporan" data-action="update">
                            memperbarui
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal for file operations -->
    <div id="fileModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Berkas</h3>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div id="modalContent">
                    <!-- Content will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="/mahasiswa/js/checkberkas.js"></script>
</body>
</html>