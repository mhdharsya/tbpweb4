<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/output.css' />
  <title>Register</title>
</head>
<body class="font-sans bg-gray-300 flex justify-center items-center min-h-screen" style="font-family: 'Poppins', sans-serif;">

  <div class="bg-white p-8 rounded-3xl shadow-xl w-96">
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Sistem Informasi Pendaftaran Seminar Hasil</h2>

    <form action="/register" method="POST">
      <div class="mb-4">
        <label for="email" class="block text-gray-600 font-medium mb-2">Email</label>
        <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="example@gmail.com">
      </div>

      <div class="mb-4">
        <label for="id_user" class="block text-gray-600 font-medium mb-2">NIM/NIP</label>
        <input type="text" id="id_user" name="id_user" required class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="NIM/NIP saat registrasi">
      </div>

      <div class="mb-4">
        <label for="password" class="block text-gray-600 font-medium mb-2">Password</label>
        <input type="password" id="password" name="password" required class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" placeholder="Maksimal 8 karakter">
      </div>

      <div class="mb-4">
        <label for="role" class="block text-gray-600 font-medium mb-2">Role</label>
        <select id="role" name="role" required class="w-full px-4 py-3 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300">
          <option value="MAHASISWA">Mahasiswa</option>
          <option value="DOSEN">Dosen</option>
          <option value="ADMIN">Admin</option>
          <option value="KADEP">Kadep</option>
        </select>
      </div>

      <div class="mb-4">
        <button type="submit" class="w-full bg-black hover:bg-gray-800 text-white font-semibold py-3 px-4 rounded-xl transition duration-300">
          Register
        </button>
      </div>
    </form>
  </div>
<script>
      document.getElementById('registerForm').addEventListener('submit', async function (e) {
      e.preventDefault(); // Prevent default form submission

      const email = document.getElementById('email').value;
      const id_user = document.getElementById('id_user').value;
      const password = document.getElementById('password').value;
      const role = document.getElementById('role').value;

      // Perform simple validation
      if (!email || !id_user || !password || !role) {
        alert("All fields are required!");
        return;
      }

      const data = { email, id_user, password, role };

      try {
        const response = await fetch('/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();
        
        if (response.status === 201) {
          // If registration is successful
          alert('User created successfully!');
          window.location.href = '/login'; // Redirect to login page
        } else {
          // Handle errors (email or id_user already exists)
          alert(result.message || 'Something went wrong');
        }
      } catch (error) {
        console.error('Error during registration:', error);
        alert('Server error, please try again later');
      }
    });
</script>

</body>
</html>
