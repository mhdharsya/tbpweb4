            document.getElementById(modalId).classList.add('hidden');
        }

        // Add event listeners for quick action buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Statistics button
            const statisticsBtn = document.querySelector('button[data-action="statistics"]') || 
                document.querySelector('.bg-blue-50');
            if (statisticsBtn) {
                statisticsBtn.addEventListener('click', () => openModal('statisticsModal'));
            }

            // PDF export button
            const pdfBtn = document.querySelector('button[data-action="pdf"]') || 
                document.querySelector('.bg-green-50');
            if (pdfBtn) {
                pdfBtn.addEventListener('click', () => openModal('pdfModal'));
            }

            // Close modals when clicking outside
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('bg-black')) {
                    const modals = document.querySelectorAll('[id$="Modal"]');
                    modals.forEach(modal => {
                        modal.classList.add('hidden');
                    });
                }
            });

            // Add functionality to notification bell
            const notificationBtn = document.querySelector('button[data-feather="bell"]').parentElement;
            notificationBtn.addEventListener('click', function() {
                showNotifications();
            });

            // Add responsive behavior for mobile
